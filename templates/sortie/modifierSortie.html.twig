{% extends 'base.html.twig' %}

{% block title %}Modifier une sortie{% endblock %}

{% form_theme modifierSortie 'bootstrap_5_layout.html.twig' %}

{% block integer_widget %}
    <div class="integer_widget">
        {% set type = type|default('number') %}
    </div>
{% endblock %}

{% block contenu %}
    {{ form_start(modifierSortie) }}
    <div class="row">
        <div class="col-6 offset-3 text-center">
            <h3>{{ form_row(modifierSortie.nom, {label: "Nom de la sortie"}) }}</h3>
        </div>
        <div class="row">
            <div class="col-3 offset-4">
                <label>Ville organisatrice :</label>
            </div>
            <div class="col-3">
                <strong>{{ orga.sitesnosite.nom }}</strong>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-4 offset-2 text-center">
            <p>{{ form_row(modifierSortie.datedebut, {label: "Date et heure de la sortie"}) }}</p>
        </div>
        <div class="col-4 text-center">
            <p>{{ form_row(modifierSortie.datecloture, {label: "Date limite d'inscription"}) }}</p>
        </div>
    </div>
    <div class="row">
        <div class="col-4 offset-2 text-center">
            <p>{{ form_row(modifierSortie.nbinscriptionsmax, {label: 'Nombre de places'}) }}</p>
        </div>
        <div class="col-4 text-center">
            <p>{{ form_row(modifierSortie.duree, {label: "Dur√©e (minutes)"}) }}</p>
        </div>
    </div>
    <div class="row">
        <div class="col-8 offset-2 text-center">
            <p>{{ form_row(modifierSortie.descriptioninfos, {label: 'Description et infos'}) }}</p>
        </div>
    </div>
    <div class="row">
        <div class="col-4 offset-2 text-center">
            <div><label>Ville</label>
                <select  id="villes" class="form-control">
                    {% for ville in villes %}
                        <option value="{{ ville.id }}">{{ ville.nomville }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="col-4 text-center">
            {{ form_row(modifierSortie.lieux_no_lieu, {label: "Lieu", id: "idlieu"}) }}
        </div>
    </div>
    <div class="row">
        <div class="col-12 text-center">
            <p id="codePostal">Code Postal :</p>
        </div>
        <div class="col-12 text-center">
            <p id="rue">Rue :</p>
        </div>
        <div class="col-12 text-center">
            <p id="latitude">Latitude :</p>
        </div>
        <div class="col-12 text-center">
            <p id="longitude">Longitude :</p>
        </div>
    </div>
    <div class="row text-center">
        <div class="col-2 offset-5">
            <button type="submit" id="btnModif" class="btn btn-primary" name="modifier">Modifier</button>
        </div>
    </div>
    {{ form_end(modifierSortie) }}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('/JavaScript/sortie.js') }}"></script>
{% endblock %}