{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block contenu %}
    <div class="justify-content-center">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ 'Le nom d\'utilisateur ou le mot de passe est incorrect' }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal text-center">Bienvenue</h1>
            <div class="row">
                <div class="col-1 offset-3 justify-content-end">
                    <label for="inputPseudo">Pseudo</label>
                </div>
                <div class="col-4">
                    <input type="text" value="{{ last_username }}" name="pseudo" id="inputPseudo"
                           class="form-control"
                           autocomplete="username" required autofocus>
                </div>
            </div>
            <div class="row">
                <div class="col-1 offset-3 justify-content-end">
                    <label for="inputPassword">Password</label>
                </div>
                <div class="col-4">
                    <input type="password" name="password" id="inputPassword" class="form-control"
                           autocomplete="current-password"
                           required>
                </div>
            </div>

            <div class="row">
                <div class="col offset-3">
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="remember_me"> Se souvenir de moi
                        </label>
                    </div>
                </div>
            </div>

            <div class="d-grid gap-2 col-2 mx-auto">
                <button class="btn btn-lg btn-dark" type="submit">Connexion</button>
                <a href="{{ path('app_register') }}" class="btn btn-lg btn-dark" role="button">Inscription</a>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


            {#Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html#}


        </form>
    </div>
{% endblock %}
