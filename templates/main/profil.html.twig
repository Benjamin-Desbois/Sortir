{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block contenu %}
    <div class="text-center">
        {% if pseudo == user.pseudo %}
            <h1>Mon Profil</h1>
        {% else %}
            <h1>Profil de {{ user.pseudo }}</h1>
        {% endif %}
    </div>
    Pseudo : {{ user.pseudo }}<br>
    Nom : {{ user.nom }}<br>
    Prénom : {{ user.prenom }}<br>
    N° de Téléphone : {{ user.telephone }}<br>
    E-mail : {{ user.mail }}<br>
    Site : {{ site.nom }}<br>

    {% if pseudo == user.pseudo %}
    <a href="{{ path('app_modifierProfil') }}">Modifier</a>
    {% endif %}

{% endblock %}